<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/history_dialog_layout_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="7dip">
    <TextView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/txtHistoryD" 
    	android:text="" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentTop="true">
   	</TextView>
    <TextView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/txtHistoryR" 
    	android:text="" 
    	android:layout_width="wrap_content"
    	android:layout_below="@+id/txtHistoryD"
    	android:paddingTop="5dip">
   	</TextView>
 	<TextView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/txtHistoryU" 
    	android:text="" 
    	android:layout_width="wrap_content" 
    	android:layout_below="@+id/txtHistoryR"
    	android:paddingTop="5dip"
    	android:paddingBottom="25dip">
   	</TextView>   	
    <Button
    	android:layout_below="@+id/txtHistoryU" 
    	android:layout_alignParentLeft="true"  
    	android:layout_height="wrap_content" 
    	android:text="Ok" 
    	android:id="@+id/btnHistoryOk"
    	android:layout_width="120dip"
    	android:gravity="center">
   	</Button>
    <Button 
    	android:layout_below="@+id/txtHistoryU"
    	android:layout_alignParentRight="true" 
    	android:layout_height="wrap_content" 
    	android:text="Delete" 
    	android:id="@+id/btnHistoryDelete"    	
    	android:layout_width="120dip"
    	android:gravity="center">
   	</Button>   	
</RelativeLayout>
